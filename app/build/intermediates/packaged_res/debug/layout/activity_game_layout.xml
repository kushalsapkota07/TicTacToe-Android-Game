<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameLayout"
    android:background="#6c9fba"
    >
    <include layout="@layout/overview_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/overview"
        />
    <include
        layout="@layout/game_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_centerVertical="true"
        android:id="@+id/gameBar"
        android:layout_below="@id/overview"
        android:layout_marginTop="112dp"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/overview"
        android:layout_marginTop="190dp"
android:layout_centerHorizontal="true"
        >

        <TextView
            android:layout_width="100dp"
            android:id="@+id/r0c0"
            android:layout_row="0"
            android:layout_column="0"
            android:fontFamily="@font/acme"
            android:onClick="onButtonClicked"

            android:textColor="@color/black"
            android:textSize="75sp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"

            android:gravity="center"
           />

        <TextView
            android:layout_width="100dp"
            android:id="@+id/r0c1"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="onButtonClicked"
            android:fontFamily="@font/acme"
            android:textColor="@color/black"
            android:textSize="75sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="100dp"
            android:id="@+id/r0c2"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="onButtonClicked"
            android:fontFamily="@font/acme"
            android:textColor="@color/black"
            android:textSize="75sp"
            android:textStyle="bold"

            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="100dp"
            android:id="@+id/r1c0"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="onButtonClicked"
            android:fontFamily="@font/acme"
            android:textColor="@color/black"
            android:textSize="75sp"
            android:textStyle="bold"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="100dp"
            android:id="@+id/r1c1"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="onButtonClicked"
            android:fontFamily="@font/acme"
            android:textColor="@color/black"
            android:textSize="75sp"
            android:textStyle="bold"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"

            />

        <TextView
            android:layout_width="100dp"
            android:id="@+id/r1c2"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="onButtonClicked"
            android:fontFamily="@font/acme"
            android:textColor="@color/black"
            android:textSize="75sp"
            android:textStyle="bold"

            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:gravity="center"

            />

        <TextView
            android:layout_width="100dp"
            android:id="@+id/r2c2"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="onButtonClicked"
            android:fontFamily="@font/acme"
            android:textColor="@color/black"
            android:textSize="75sp"
            android:textStyle="bold"

            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="100dp"
            android:id="@+id/r2c0"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="onButtonClicked"
            android:fontFamily="@font/acme"
            android:textColor="@color/black"
            android:textSize="75sp"
            android:textStyle="bold"

            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="100dp"
            android:id="@+id/r2c1"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="onButtonClicked"
            android:fontFamily="@font/acme"
            android:textColor="@color/black"
            android:textSize="75sp"
            android:textStyle="bold"

            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            />
    </GridLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1 - "
        android:id="@+id/p1Turn"
        android:layout_below="@id/overview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2 - "
        android:id="@+id/p2Turn"
        android:layout_below="@id/p1Turn"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameBar"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/baloo_chettan"
        android:textSize="20sp"
        android:text="Round - 1"
        android:id="@+id/round"/>

</RelativeLayout>