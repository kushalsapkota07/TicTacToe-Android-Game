<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameLayout"
    android:background="#6c9fba"
    >
    <include layout="@layout/overview_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/overview"
        />
    <include
        layout="@layout/game_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_centerVertical="true"
        android:id="@+id/gameBar"
        android:layout_below="@id/overview"
        android:layout_marginTop="108dp"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/overview"
android:layout_centerInParent="true"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/r0c0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="0"
            android:fontFamily="@font/acme"
            android:gravity="bottom"
            android:onClick="onButtonClicked"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="60sp"
            android:paddingTop="25dp"
            android:paddingLeft="20dp"
            android:layout_margin="20dp"
            android:hint="X"
            />

        <TextView
            android:id="@+id/r0c1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/acme"
            android:gravity="bottom"
            android:hint="X"
            android:onClick="onButtonClicked"
            android:paddingLeft="20dp"

            android:paddingTop="25dp"
            android:textColor="@color/black"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/r0c2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="2"
            android:fontFamily="@font/acme"
            android:onClick="onButtonClicked"
            android:paddingTop="25dp"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:hint="X"
            android:gravity="bottom"


            />

        <TextView
            android:id="@+id/r1c0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="0"
            android:fontFamily="@font/acme"
            android:onClick="onButtonClicked"
            android:paddingTop="25dp"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:hint="X"

            />

        <TextView
            android:id="@+id/r1c1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="1"
            android:fontFamily="@font/acme"
            android:onClick="onButtonClicked"
            android:paddingTop="25dp"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:hint="X"

            />

        <TextView
            android:id="@+id/r1c2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="2"
            android:fontFamily="@font/acme"
            android:onClick="onButtonClicked"
            android:paddingTop="25dp"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:hint="X"

            />

        <TextView
            android:id="@+id/r2c2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="2"
            android:fontFamily="@font/acme"
            android:onClick="onButtonClicked"
            android:paddingTop="25dp"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:hint="X"
            />

        <TextView
            android:id="@+id/r2c0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="0"
            android:fontFamily="@font/acme"
            android:onClick="onButtonClicked"
            android:paddingTop="25dp"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:hint="X"

            />

        <TextView
            android:id="@+id/r2c1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="1"
            android:fontFamily="@font/acme"
            android:onClick="onButtonClicked"
            android:paddingTop="25dp"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:hint="X"

            />
    </GridLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1 - "
        android:id="@+id/p1Turn"
        android:layout_below="@id/overview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2 - "
        android:id="@+id/p2Turn"
        android:layout_below="@id/p1Turn"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameBar"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/baloo_chettan"
        android:textSize="20sp"
        android:text="Round - 1"
        android:id="@+id/round"/>

</RelativeLayout>